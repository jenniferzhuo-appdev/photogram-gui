<h1> List of Users </h1>

<form action="/insert_user_record">
  
  <label for="username_box"> Username </label>
  <input id="username_box" name="input_username">

  <label for="private_option"> Private? </label>
  <input type="checkbox" id="private_option" name="private_selection">

  <button>
    Add user
  </button>

</form>

<hr>

<table border="1">
  <tr>
    <th>
      Username
    </th>
    
    <th>
      Private?
    </th>
    
    <th>
    </th>
  </tr>


<% @users.each do |account| %>
  <tr>
    <td>
      <%= account.username %>
    </td>

    <td>
      <% if account.private == true %>
        <% p = "Yes" %>
      <% else %>
        <% p = "No" %>
        <% end %>
      <%= p %>
    </td>

    <td>
      <a href="/users/<%= account.username %>">
      Show details
      </a>
    </td>

  </tr>
  
  <%end%>

</table>
